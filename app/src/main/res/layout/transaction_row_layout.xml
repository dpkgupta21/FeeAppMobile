<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_date"
            style="@style/txt_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="19 Mar 2016" />


        <TextView
            android:id="@+id/txt_price"
            style="@style/txt_btn_bg_color_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="RS.5,000/-"
            android:textSize="@dimen/txt_size_18" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp">

        <TextView
            android:id="@+id/txt_name"
            style="@style/txt_btn_bg_color_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhara Vakharia"
            android:textSize="@dimen/txt_size_18" />

        <TextView
            android:id="@+id/txt_id"
            style="@style/txt_black_color_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_toRightOf="@+id/txt_name"
            android:text="(82364889354)"
            android:textSize="@dimen/txt_size_18" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_institute_name"
                style="@style/txt_black_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tejas Vidyalaya" />


            <TextView
                android:id="@+id/txt_fees_type"
                style="@style/txt_black_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Fees" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/txt_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_repeat"
                android:paddingBottom="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:paddingTop="@dimen/margin_10dp"
                android:text="REPEAT"
                android:textColor="@color/btn_bg" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>