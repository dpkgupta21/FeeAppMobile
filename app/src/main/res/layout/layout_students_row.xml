<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_student_name"
            style="@style/txt_black_color_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhara Vakharia" />

        <TextView
            android:id="@+id/txt_student_id"
            style="@style/txt_black_color_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_toRightOf="@+id/txt_student_name"
            android:text="(ID : 987132437254)" />

    </RelativeLayout>


    <TextView
        android:id="@+id/txt_school_name"
        style="@style/txt_black_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baroda High School,Alkapuri, Vadodara" />


</LinearLayout>