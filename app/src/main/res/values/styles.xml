<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>


    <style name="txt_black_color_bold">
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_black_color</item>
    </style>

    <style name="txt_black_color">
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textColor">@color/txt_black_color</item>
    </style>

    <style name="txt_btn_bg_color_bold">
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/btn_bg</item>
    </style>

    <style name="txt_btn_bg_color">
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:textColor">@color/btn_bg</item>
    </style>


    <style name="et_home">

        <item name="android:textColor">@color/btn_bg</item>
        <item name="android:background">@drawable/bg_et</item>
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:padding">@dimen/margin_10dp</item>
        <item name="android:drawablePadding">@dimen/margin_10dp</item>

    </style>

    <style name="et_black">

        <item name="android:textColor">@color/txt_black_color</item>
        <item name="android:background">@drawable/bg_et</item>
        <item name="android:textSize">@dimen/txt_size_15</item>
        <item name="android:paddingBottom">@dimen/margin_10dp</item>
        <item name="android:drawablePadding">@dimen/margin_10dp</item>

    </style>

    <style name="btnStyleProceed" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="btn_style">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/btn_bg</item>
    </style>


    <style name="Theme.BD_Dialog" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
